@model List<ECommerceProjesi.Entities.Urun>

@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mt-2">Yeni Ürün Ekle</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Ürün Adı</th>
                <th>Kategori</th>
                <th>Marka</th>
                <th style="width: 250px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in Model)
            {
                <tr>
                    <td>@urun.Id</td>
                    <td>@urun.Ad</td>
                    <td>@(urun.Kategori?.Ad ?? "-")</td>
                    <td>@(urun.Marka?.Ad ?? "-")</td>
                    <td>

                        <a asp-controller="UrunResimleri" asp-action="Index" asp-route-urunId="@urun.Id" class="btn btn-sm btn-primary">Resimler</a>
                        <a asp-controller="UrunVaryantilari" asp-action="Index" asp-route-urunId="@urun.Id" class="btn btn-sm btn-success">Varyantlar</a>
                        <a asp-action="Edit" asp-route-id="@urun.Id" class="btn btn-sm btn-warning ms-1">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@urun.Id" class="btn btn-sm btn-info ms-1">Detay</a>
                        <a asp-action="Delete" asp-route-id="@urun.Id" class="btn btn-sm btn-danger ms-1">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        Sistemde kayıtlı ürün bulunmamaktadır. Yeni ürün eklemek için yukarıdaki butonu kullanın.
    </div>
}