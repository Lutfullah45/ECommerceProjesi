@model ECommerceProjesi.Entities.Urun

@{
    ViewData["Title"] = $"'{Model.Ad}' Ürününü Sil";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger mt-3">Bu ürünü silmek istediğinize emin misiniz?</h3>
<p class="text-danger">Bu işlem geri alınamaz!</p>

<div>
    <hr />
    <h4>Ürün Bilgileri</h4>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Ad) 
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Ad) 
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Aciklama)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
        <dt class="col-sm-3">
            Kategori 
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Kategori.Ad)
        </dd>
        <dt class="col-sm-3">
            Marka 
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Marka.Ad)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken() 
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">İptal Et ve Listeye Dön</a>
    </form>
</div>