@model ECommerceProjesi.WebUI.Areas.Admin.Models.UrunFormViewModel

@{
    ViewData["Title"] = $"'{Model.Urun.Ad}' Ürününü Düzenle";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit" asp-route-id="@Model.Urun.Id" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Urun.Id" />
 
            <div class="form-group mb-3">
                <label asp-for="Urun.Ad" class="form-label"></label>
                <input asp-for="Urun.Ad" class="form-control" />
                <span asp-validation-for="Urun.Ad" class="text-danger"></span>
            </div>

            @* Açıklama Giriş Alanı *@
            <div class="form-group mb-3">
                <label asp-for="Urun.Aciklama" class="form-label"></label>
                <textarea asp-for="Urun.Aciklama" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Urun.Aciklama" class="text-danger"></span>
            </div>

            @* Kategori Dropdown Listesi *@
            <div class="form-group mb-3">
                <label asp-for="Urun.KategoriId" class="form-label">Kategori</label>
                <select asp-for="Urun.KategoriId" class="form-select" asp-items="Model.Kategoriler">
                    <option value="">-- Kategori Seçiniz --</option>
                </select>
                <span asp-validation-for="Urun.KategoriId" class="text-danger"></span>
            </div>

            @* Marka Dropdown Listesi *@
            <div class="form-group mb-3">
                <label asp-for="Urun.MarkaId" class="form-label">Marka</label>
                <select asp-for="Urun.MarkaId" class="form-select" asp-items="Model.Markalar">
                    <option value="">-- Marka Seçiniz --</option>
                </select>
                <span asp-validation-for="Urun.MarkaId" class="text-danger"></span>
            </div>

            @* Kaydet ve Geri Dön Butonları *@
            <div class="form-group mt-4">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-warning" /> 
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}