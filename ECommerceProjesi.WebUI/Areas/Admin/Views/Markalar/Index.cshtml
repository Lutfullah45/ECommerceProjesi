@model List<ECommerceProjesi.Entities.Marka>
@{
    ViewData["Title"] = "Marka Yönetimi";
}

<h1>@ViewData["Title"]</h1>
<p><a asp-action="Create" class="btn btn-primary mt-2">Yeni Marka Ekle</a></p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Marka Adı</th>
                <th style="width: 180px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var marka in Model)
            {
                <tr>
                    <td>@marka.Id</td>
                    <td>@marka.Ad</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@marka.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@marka.Id" class="btn btn-sm btn-danger ms-1">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        Sistemde kayıtlı marka bulunmamaktadır. Yeni marka eklemek için yukarıdaki butonu kullanın.
    </div>
}