@model List<ECommerceProjesi.Entities.Kategori>
@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<h1>@ViewData["Title"]</h1>
<p><a asp-action="Create" class="btn btn-primary mt-2">Yeni Kategori Ekle</a></p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
                <th>Açıklama</th>
                <th>Ana Kategori ID</th>
                <th style="width: 180px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kat in Model)
            {
                <tr>
                    <td>@kat.Id</td>
                    <td>@kat.Ad</td>
                    <td>@kat.Aciklama</td>
                    <td>@(kat.ParentKategoriId.HasValue? kat.ParentKategoriId.Value.ToString() : "-")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@kat.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@kat.Id" class="btn btn-sm btn-danger ms-1">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        Sistemde kayıtlı kategori bulunmamaktadır. Yeni kategori eklemek için yukarıdaki butonu kullanın.
    </div>
}