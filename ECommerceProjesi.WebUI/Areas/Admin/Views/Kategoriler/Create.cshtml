@model ECommerceProjesi.Entities.Kategori

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-area="Admin" asp-controller="Kategoriler" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Ad" class="form-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Aciklama" class="form-label"></label>
                <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ParentKategoriId" class="form-label">Ana Kategori (İsteğe Bağlı)</label>
                <select asp-for="ParentKategoriId" class="form-select" asp-items="@ViewBag.AnaKategoriler">
                    <option value="0">-- Ana Kategori Seçiniz (Yoksa Boş Bırakın) --</option>
                </select>
                <span asp-validation-for="ParentKategoriId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}