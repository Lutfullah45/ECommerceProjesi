@model ECommerceProjesi.WebUI.Areas.Admin.Models.UrunVaryantIndexViewModel

@{
    ViewData["Title"] = $"'{Model.Urun.Ad}' için Varyant Yönetimi";
}

<h1>@ViewData["Title"]</h1>
<hr />

<p>
    <a asp-action="Create" asp-route-urunId="@Model.Urun.Id" class="btn btn-primary mt-2">Yeni Varyant Ekle</a>
    <a asp-controller="Urunler" asp-action="Index" class="btn btn-outline-secondary mt-2 ms-2">Ana Ürün Listesine Geri Dön</a>
</p>

@if (Model.Varyantlar != null && Model.Varyantlar.Any())
{
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Varyant ID</th>
                <th>Varyant Adı</th>
                <th>Fiyat</th>
                <th>Stok Adedi</th>
                <th style="width: 180px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var varyant in Model.Varyantlar)
            {
                <tr>
                    <td>@varyant.Id</td>
                    <td>@varyant.Ad</td>
                    <td>@varyant.Fiyat.ToString("C")</td>
                    <td>@varyant.StokAdedi</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@varyant.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@varyant.Id" class="btn btn-sm btn-danger ms-1">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        Bu ürün (ID: @Model.Urun.Id) için henüz varyant eklenmemiş.
    </div>
}