@model ECommerceProjesi.Entities.UrunVaryanti

@{
    ViewData["Title"] = $"Varyantı Sil: {Model.Ad} (Ürün: {ViewBag.UrunAdi})";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger mt-3">Bu varyantı silmek istediğinize emin misiniz?</h3>
<p class="text-danger">Bu işlem geri alınamaz! Bu varyant geçmiş siparişlerde kullanıldıysa silme işlemi başarısız olabilir.</p>

<div>
    <hr />
    <h4>Varyant Bilgileri</h4>
    <dl class="row">
        <dt class="col-sm-3">Varyant ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Varyant Adı</dt>
        <dd class="col-sm-9">@Model.Ad</dd>

        <dt class="col-sm-3">Fiyat</dt>
        <dd class="col-sm-9">@Model.Fiyat.ToString("C")</dd>

        <dt class="col-sm-3">Stok Adedi</dt>
        <dd class="col-sm-9">@Model.StokAdedi</dd>

        <dt class="col-sm-3">Ana Ürün ID</dt>
        <dd class="col-sm-9">@Model.UrunId</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-urunId="@Model.UrunId" class="btn btn-outline-secondary">İptal Et ve Varyant Listesine Dön</a>
    </form>
</div>