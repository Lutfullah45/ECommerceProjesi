@model ECommerceProjesi.Entities.Siparis
@{
    ViewData["Title"] = "Siparişiniz Alındı!";
    var teslimatAdresi = Model.TeslimatAdresi;
    var faturaAdresi = Model.FaturaAdresi;
    var tahminiTeslimat = Model.Tarih.AddDays(3).ToLocalTime().ToString("dd MMMM yyyy");
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h1 class="h3 my-2"><i class="bi bi-check-circle-fill"></i> @ViewData["Title"]</h1>
                </div>
                <div class="card-body p-4">

                    <p class="lead text-center">Merhaba <strong>@Model.Musteri.Ad @Model.Musteri.Soyad</strong>, siparişiniz için teşekkür ederiz!</p>
                    <p class="text-center text-muted">Sipariş özetiniz aşağıdadır.</p>

                    <div class="row border-bottom pb-2 mb-3">
                        <div class="col-6">
                            <strong>Sipariş No:</strong> #@Model.SiparisNo
                        </div>
                        <div class="col-6 text-end">
                            <strong>Tarih:</strong> @Model.Tarih.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                        </div>
                    </div>

                    <div class="row mb-4">
                        @* --- TESLİMAT ADRESİ --- *@
                        <div class="col-md-6">
                            <h5 class="text-primary">Teslimat Adresi</h5>
                            <div class="p-3 bg-light rounded h-100">
                                <address class="mb-0">
                                    <strong>@Model.Musteri.Ad @Model.Musteri.Soyad</strong> <br>
                                    <span class="badge bg-secondary mb-2">@teslimatAdresi.AdresBasligi</span><br>
                                    @teslimatAdresi.AcikAdres<br>
                                    @teslimatAdresi.Ilce / @teslimatAdresi.Il<br>
                                    <i class="bi bi-telephone-fill small"></i> @teslimatAdresi.Telefon
                                </address>
                                <hr />
                                <small class="text-success fw-bold">
                                    <i class="bi bi-truck"></i> Tahmini Teslim: @tahminiTeslimat
                                </small>
                            </div>
                        </div>
                        @* --- FATURA ADRESİ --- *@
                        <div class="col-md-6">
                            <h5 class="text-primary">Fatura Adresi</h5>
                            <div class="p-3 bg-light rounded h-100">
                                <address class="mb-0">
                                    <strong>@Model.Musteri.Ad @Model.Musteri.Soyad</strong> <br>
                                    <span class="badge bg-secondary mb-2">@faturaAdresi.AdresBasligi</span><br>
                                    @faturaAdresi.AcikAdres<br>
                                    @faturaAdresi.Ilce / @faturaAdresi.Il<br>
                                    <i class="bi bi-telephone-fill small"></i> @faturaAdresi.Telefon
                                </address>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4">Sipariş İçeriği</h5>
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Ürün</th>
                                <th class="text-center">Adet</th>
                                <th class="text-end">Birim Fiyat</th>
                                <th class="text-end">Toplam</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kalem in Model.SiparisKalemleri)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold">@kalem.UrunVaryanti.Urun.Ad</span>
                                        <br />
                                        <small class="text-muted">(@kalem.UrunVaryanti.Ad)</small>
                                    </td>
                                    <td class="text-center">@kalem.Adet</td>
                                    <td class="text-end">@kalem.BirimFiyat.ToString("C")</td>
                                    <td class="text-end">@((kalem.Adet * kalem.BirimFiyat).ToString("C"))</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end text-muted">Ara Toplam:</td>
                                <td class="text-end">@Model.ToplamTutar.ToString("C")</td>
                            </tr>
                            <tr class="fs-5 table-success">
                                <td colspan="3" class="text-end fw-bold">GENEL TOPLAM:</td>
                                <td class="text-end fw-bold">@Model.ToplamTutar.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="d-grid gap-2 d-md-block text-center mt-5">
                        <a asp-controller="Urun" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-cart"></i> Alışverişe Devam Et
                        </a>
                        <a asp-controller="Hesabim" asp-action="Profil" class="btn btn-outline-secondary btn-lg">
                            Profil ve Siparişlerim
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>