@using ECommerceProjesi.Entities
@model List<Urun>

@{
    ViewData["Title"] = "Ana Sayfa";
}
<div class="bg-light p-5 rounded-3 mb-5 text-center">
    <h1 class="display-5 fw-bold">Core Shop'a Hoş Geldiniz!</h1>
    <p class="fs-4">En yeni teknoloji ve moda ürünlerini keşfedin.</p>
    <a asp-controller="Urun" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">Alışverişe Başla</a>
</div>
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h3 border-start border-4 border-primary ps-3">Popüler Ürünler</h2>
        <a asp-controller="Urun" asp-action="Index" class="text-decoration-none fw-bold">
            Tümünü Gör <i class="bi bi-arrow-right"></i>
        </a>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var urun in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 product-card">
                    <div style="height: 250px; overflow: hidden; position: relative;" class="bg-white rounded-top p-3 text-center">
                        @{
                            var anaResim = urun.Resimler?.FirstOrDefault(r => r.AnaResimMi) ?? urun.Resimler?.FirstOrDefault();
                            var resimYolu = anaResim?.DosyaAdi ?? "/images/placeholder.png";
                        }
                        <a asp-controller="Urun" asp-action="Details" asp-route-id="@urun.Id">
                            <img src="@resimYolu" class="img-fluid" style="max-height: 100%; max-width: 100%; object-fit: contain;" alt="@urun.Ad">
                        </a>
                    </div>

                    <div class="card-body d-flex flex-column pt-2">
                        <small class="text-muted mb-1 text-uppercase fw-bold" style="font-size: 0.75rem;">
                            @(urun.Marka?.Ad ?? "Marka Yok")
                        </small>
                        <h6 class="card-title text-truncate mb-2" title="@urun.Ad">
                            <a asp-controller="Urun" asp-action="Details" asp-route-id="@urun.Id" class="text-decoration-none text-dark stretched-link">
                                @urun.Ad
                            </a>
                        </h6>
                        <div class="mt-auto">
                            @{
                                var ilkVaryant = urun.Varyantlar?.OrderBy(v => v.Fiyat).FirstOrDefault();
                                if (ilkVaryant != null)
                                {
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-primary fw-bold fs-5">@ilkVaryant.Fiyat.ToString("C0")</span>

                                        @if (ilkVaryant.StokAdedi > 0)
                                        {
                                            <form asp-controller="Sepet" asp-action="Ekle" method="post" style="position: relative; z-index: 2;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="urunVaryantiId" value="@ilkVaryant.Id" />
                                                <input type="hidden" name="adet" value="1" />
                                                <button type="submit" class="btn btn-sm btn-outline-primary rounded-circle" style="width: 35px; height: 35px;">
                                                    <i class="bi bi-cart-plus"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-secondary border">Tükendi</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">Fiyat Yok</span>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>