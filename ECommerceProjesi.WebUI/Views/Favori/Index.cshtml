@model List<ECommerceProjesi.Entities.Favori>

@{
    ViewData["Title"] = "Favorilerim";
}

<div class="container mt-5">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-heart-fill text-danger fs-3 me-2"></i>
        <h2 class="mb-0">Favori Ürünlerim</h2>
    </div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 transition-hover">
                        <div class="position-relative" style="height: 250px; overflow: hidden;">
                            @{
                                var resimYolu = item.Urun.Resimler.FirstOrDefault(r => r.AnaResimMi)?.DosyaAdi ?? item.Urun.Resimler.FirstOrDefault()?.DosyaAdi;
                            }
                            @if (!string.IsNullOrEmpty(resimYolu))
                            {
                                <img src="@resimYolu" class="card-img-top w-100 h-100" style="object-fit: contain; padding: 10px;" alt="@item.Urun.Ad">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 bg-light text-muted">
                                    <i class="bi bi-image fs-1"></i>
                                </div>
                            }
                            <form asp-controller="Favori" asp-action="EkleCikar" method="post" class="position-absolute top-0 end-0 m-2">
                                <input type="hidden" name="urunId" value="@item.UrunId" />
                                <button type="submit" class="btn btn-light btn-sm rounded-circle shadow-sm text-danger" title="Favorilerden Kaldır">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </form>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="@item.Urun.Ad">
                                <a asp-controller="Urun" asp-action="Details" asp-route-id="@item.UrunId" class="text-decoration-none text-dark">
                                    @item.Urun.Ad
                                </a>
                            </h5>

                            <div class="mt-auto">
                                <p class="card-text fw-bold text-primary fs-5 mb-2">
                                <p class="card-text fw-bold text-primary fs-5 mb-2">
                                    @{
                                        decimal gosterilecekFiyat = 0;

                                        if (item.Urun.Varyantlar != null && item.Urun.Varyantlar.Any())
                                        {
                                            gosterilecekFiyat = item.Urun.Varyantlar.Min(v => v.Fiyat);
                                        }
                                    }
                                    @gosterilecekFiyat.ToString("C")
                                </p>
                                <div class="d-grid gap-2">
                                    <a asp-controller="Urun" asp-action="Details" asp-route-id="@item.UrunId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> İncele
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-heart-break text-muted" style="font-size: 4rem;"></i>
            </div>
            <h3 class="text-muted">Favori listeniz henüz boş.</h3>
            <p class="text-muted mb-4">Beğendiğiniz ürünleri kalp ikonuna tıklayarak buraya ekleyebilirsiniz.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-bag"></i> Alışverişe Başla
            </a>
        </div>
    }
</div>