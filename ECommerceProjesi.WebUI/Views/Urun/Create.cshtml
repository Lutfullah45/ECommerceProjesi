@model ECommerceProjesi.Entities.Urun

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<h1>Yeni Ürün Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Aciklama" class="control-label"></label>
                <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="KategoriId" class="control-label">Kategori</label>
                <select asp-for="KategoriId" class="form-select" asp-items="@ViewBag.Kategoriler">
                    <option value="">-- Kategori Seçiniz --</option>
                </select>
                <span asp-validation-for="KategoriId" class="text-danger"></span> 
            </div>

            <div class="form-group mb-3">
                <label asp-for="MarkaId" class="control-label">Marka</label>
                <select asp-for="MarkaId" class="form-select" asp-items="@ViewBag.Markalar">
                    <option value="">-- Marka Seçiniz --</option>
                </select>
                <span asp-validation-for="MarkaId" class="text-danger"></span> 
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}