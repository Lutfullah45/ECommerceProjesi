@using ECommerceProjesi.Entities
@model List<Urun>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Ürünler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h4 class="fw-bold m-0 text-dark">@ViewData["Title"]</h4>
        <span class="badge bg-light text-dark border">@Model.Count sonuç</span>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">Bu kriterlere uygun ürün bulunamadı.</div>
    }
    else
    {
        @* DÜZ GRİD LİSTE *@
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-3">
            @foreach (var urun in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border product-card">
                        <div style="height: 180px; overflow: hidden;" class="bg-white rounded-top d-flex align-items-center justify-content-center p-2">
                            @{
                                var imgPath = urun.Resimler?.FirstOrDefault(r => r.AnaResimMi)?.DosyaAdi ?? "/images/placeholder.png";
                            }
                            <a asp-action="Details" asp-route-id="@urun.Id" class="w-100 h-100 d-flex justify-content-center align-items-center">
                                <img src="@imgPath" style="max-height: 100%; max-width: 100%; object-fit: contain;" alt="@urun.Ad">
                            </a>
                        </div>
                        <div class="card-body p-2">
                            <h6 class="card-title text-truncate mb-1" style="font-size: 0.9rem;">
                                <a asp-action="Details" asp-route-id="@urun.Id" class="text-dark text-decoration-none">@urun.Ad</a>
                            </h6>
                            <div class="text-primary fw-bold">
                                @urun.Varyantlar?.OrderBy(v => v.Fiyat).FirstOrDefault()?.Fiyat.ToString("N0") TL
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>