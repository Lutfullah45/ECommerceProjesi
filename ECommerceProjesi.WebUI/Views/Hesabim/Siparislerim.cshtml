@model List<ECommerceProjesi.Entities.Siparis>
@{
    ViewData["Title"] = "Geçmiş Siparişlerim";
}

<h1>@ViewData["Title"]</h1>
<hr />

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Sipariş No</th>
                <th>Tarih</th>
                <th>Toplam Tutar</th>
                <th>Durum</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var siparis in Model)
            {
                <tr>
                    <td>@siparis.SiparisNo</td>
                    <td>@siparis.Tarih.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@siparis.ToplamTutar.ToString("C")</td>
                    <td>
                        <span class="badge bg-info">@siparis.SiparisDurumu?.DurumAdi</span>
                    </td>
                    <td>
                        <a asp-action="SiparisDetay" asp-route-id="@siparis.Id" class="btn btn-sm btn-primary">
                            Detayları Gör (Fatura)
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Henüz hiç sipariş vermemişsiniz.
    </div>
}