@model ECommerceProjesi.WebUI.Models.SifreDegistirmeViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Şifre Güncelleme</h5>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All"></div>
                        </div>
                    }

                    <form asp-action="SifreDegistirme" asp-controller="Hesabim" method="post">

                        <div class="mb-3">
                            <label class="form-label">Mevcut Şifreniz</label>
                            <input asp-for="EskiSifre" class="form-control" placeholder="******" />
                            <span asp-validation-for="EskiSifre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Yeni Şifre</label>
                            <input asp-for="YeniSifre" class="form-control" placeholder="******" />
                            <span asp-validation-for="YeniSifre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Yeni Şifre (Tekrar)</label>
                            <input asp-for="YeniSifreTekrar" class="form-control" placeholder="******" />
                            <span asp-validation-for="YeniSifreTekrar" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark">Şifreyi Güncelle</button>
                            <a href="/Hesabim/Profil" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>